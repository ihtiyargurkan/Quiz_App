<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@mipmap/result_background"

    >

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Result"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:id="@+id/trophyImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/trophy_image"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/resultText" />
    <TextView
        android:id="@+id/congratsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey, Congratulations"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/trophyImage" />
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denis"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/congratsText" />
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your score is 0 out of 9"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_thin"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/userNameText" />
    <Button
        android:id="@+id/score_screenFinishButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Fınısh"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_thin"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_bg"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/scoreText" />




</androidx.constraintlayout.widget.ConstraintLayout>